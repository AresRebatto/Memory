<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Memory.SinglePlayer"
             Title="SinglePlayer">
    <VerticalStackLayout>
        <Picker HorizontalOptions="Center" Margin="0,40,0,0" x:Name="SceltaModalita" BackgroundColor="White">
            <Picker.ItemsSource TextColor="#440080">
                <x:Array Type="{x:Type x:String}">
                    <x:String>Facile</x:String>
                    <x:String>Medio</x:String>
                    <x:String>Difficile</x:String>
                </x:Array>
            </Picker.ItemsSource>
            <Picker.TextColor>
                <Color>#440080</Color>
            </Picker.TextColor>
        </Picker>
    </VerticalStackLayout>
</ContentPage>